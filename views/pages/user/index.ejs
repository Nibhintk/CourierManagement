

<div class="container text-center">
  <!-- Hero Section -->
  <div class="hero-section">
    <h1 class="display-3 fw-bold">📦 Courier Pro</h1>
    <p class="lead">Fast • Reliable • Secure</p>
  </div>

  <!-- Action Cards -->
  <div class="row justify-content-center">
    <!-- Book Courier -->
    <div class="col-md-3 mb-4">
      <div class="card shadow-lg border-0 rounded-4 h-100 text-center">
        <div class="card-body d-flex flex-column justify-content-center">
          <h5 class="card-title">🚀 Book Courier</h5>
          <p class="card-text text-muted">Send your parcel quickly and safely with us.</p>
          <form action="/home/bookCourier" method="get">
            <button type="submit" class="btn btn-primary w-100 mt-auto">Book Now</button>
          </form>
        </div>
      </div>
    </div>

    <!-- Track Courier -->
    <div class="col-md-3 mb-4">
      <div class="card shadow-lg border-0 rounded-4 h-100 text-center">
        <div class="card-body d-flex flex-column justify-content-center">
          <h5 class="card-title">📍 Track Courier</h5>
          <p class="card-text text-muted">Stay updated with your parcel’s current status.</p>
          <form action="/home/trackCourier" method="get">
            <button type="submit" class="btn btn-success w-100 mt-auto">Track Now</button>
          </form>
        </div>
      </div>
    </div>

    <!-- My Bookings -->
    <div class="col-md-3 mb-4">
      <div class="card shadow-lg border-0 rounded-4 h-100 text-center">
        <div class="card-body d-flex flex-column justify-content-center">
          <h5 class="card-title">📑 My Bookings</h5>
          <p class="card-text text-muted">View all your courier bookings in one place.</p>
          <form action="/home/myBookings" method="get">
            <button type="submit" class="btn btn-warning w-100 mt-auto">View Bookings</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
